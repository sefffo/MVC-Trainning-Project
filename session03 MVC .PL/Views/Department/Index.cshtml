@using IKEA.BLL.Dto_s.DepartmentsDto_s
@using IKEA.DAL.Models.Department

@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}


<div class="card border border-primary">
    <div class="card-header bg-primary">
        <h1 class="text-white">All Departments</h1>
    </div>
    <div class="card-body">
        <a class="btn btn-success mb-3" asp-action="Create">Create New Department</a>
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(d => d.Name)</th>
                        <th>@Html.DisplayNameFor(d => d.code)</th>
                        <th>@Html.DisplayNameFor(d => d.description)</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var Item in Model)
                    {
                        <tr class="text-center">
                            <td>@Item.Name</td>
                            <td>@Item.code</td>
                            <td>@Item.description</td>
                            @* <td>
                                <a class="btn btn-primary" asp-action="Details" asp-route-Id="@Item.Id">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@Item.Id"><i class="fas fa-edit"></i>Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@Item.Id"><i class="fas fa-trash"></i>Delete</a>
                            </td> *@

                            <partial name="_ButtonsPartialViews"  model="@Item.Id" />

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                <h2>No Department Found</h2>
            </div>
        }
    </div>
</div>
