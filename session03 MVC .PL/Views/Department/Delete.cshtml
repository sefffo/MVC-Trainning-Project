@model DepartmentDetailsDto
@{
    ViewData["Title"] = "Delete";
}

<div class="card border border-primary">
    <div class="card-header bg-primary">
        <h1 class="text-white">Are you Sure To Delete @Model.Name Department!!</h1>
    </div>
    <div class="card-body">

        <ul class="nav nav-tabs" id="departmentTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
            </li>
        </ul>
        <form asp-action="Delete" method="post">
            <div class="tab-content" id="myTabContent">
                <input type="hidden" asp-for="Id" /> 
                <!-- General Tab Content -->
                <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

                    <div class="row">
                        <div class="form-group col-6">
                            <label class="col-form-label" asp-for="code"></label>
                            <input asp-for="code" class="form-control" readonly />
                        </div>
                        <div class="form-group col-6">
                            <label class="col-form-label" asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" readonly />
                        </div>
                        <div class="form-group col-12">
                            <label class="col-form-label" asp-for="description"></label>
                            <input asp-for="description" class="form-control" readonly />
                        </div>
                    </div>
                </div>

                <!-- Administration Tab Content -->
                <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
                    <div class="form-group  col-12">
                        <label class="col-form-label" asp-for="createdBy"></label>
                        <input asp-for="createdBy" class="form-control" readonly />
                    </div>
                    <div class="form-group  col-12">
                        <label class="col-form-label">CreatedOn</label>
                        <input asp-for="CreatedOn" class="form-control" readonly />
                    </div>
                    <div class="form-group  col-12">
                        <label class="col-form-label" asp-for="updatedBy"></label>
                        <input asp-for="updatedBy" class="form-control" readonly />
                    </div>
                    <div class="form-group  col-12">
                        <label class="col-form-label" asp-for="UpdatedOn"></label>
                        <input asp-for="UpdatedOn" class="form-control" readonly />
                    </div>
                </div>
                <div class="mt-4">
                    <input type="submit" class="btn btn-danger" value="Delete Department" />
                    <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
                </div>
            </div>
        </form>


    </div>
</div>
